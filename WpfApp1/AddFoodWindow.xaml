<Window x:Class="WpfApp1.AddFoodWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Додати продукт" Height="400" Width="400"
        WindowStartupLocation="CenterOwner"
        Icon="D:\Встановленні програми\JetBrains Rider 2024.2.5\ООП\WpfApp1\WpfApp1\Assets\pencil.png"
        ResizeMode="NoResize"
        Background="SeaGreen">
    <StackPanel Margin="20" VerticalAlignment="Center" >

        <TextBlock Text="Назва продукту:" Margin="0 5 0 0" FontWeight="Bold"/>
        <TextBox x:Name="NameBox" Margin="0 0 0 10" Padding="5"/>

        <TextBlock Text="Калорії (ккал):" Margin="0 5 0 0" FontWeight="Bold"/>
        <TextBox x:Name="CaloriesBox" Margin="0 0 0 10" Padding="5"/>

        <TextBlock Text="Білки (г):" Margin="0 5 0 0" FontWeight="Bold"/>
        <TextBox x:Name="ProteinBox" Margin="0 0 0 10" Padding="5"/>

        <TextBlock Text="Жири (г):" Margin="0 5 0 0" FontWeight="Bold"/>
        <TextBox x:Name="FatBox" Margin="0 0 0 10" Padding="5"/>

        <TextBlock Text="Вуглеводи (г):" Margin="0 5 0 0" FontWeight="Bold"/>
        <TextBox x:Name="CarbsBox" Margin="0 0 0 15" Padding="5"/>

        <Button Content="✅ Додати продукт"
                Click="Add_Click"
                Padding="8"
                Background="MediumSeaGreen"
                Foreground="White"
                FontWeight="Bold"
                Width="180"
                HorizontalAlignment="Center"
                Cursor="Hand"
                BorderThickness="0"
                />
    </StackPanel>
</Window>